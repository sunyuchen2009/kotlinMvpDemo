<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/life_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/life_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="this is life page"
        />

    <com.scwj.syc.kotlinmvpdemo.widget.CircleView
        android:id="@+id/life_circle"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        app:circle_color="@color/whiteDDD"
        android:background="@color/lightgray999"/>

    <ImageView
        android:id="@+id/life_iv_pappy"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher"
        />

</RelativeLayout>